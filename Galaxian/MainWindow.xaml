<Window x:Class="Galaxian.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GALAXIAN" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded">
    <Grid Background="Black">
        <!-- 行を3分割（上：HUDスコア, 中央：ゲーム, 下：HUDライフ/ラウンド） -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 上部 -->
            <RowDefinition Height="*"/>
            <!-- 中央（ゲーム画面） -->
            <RowDefinition Height="Auto"/>
            <!-- 下部 -->
        </Grid.RowDefinitions>

        <!-- 上部 HUD（スコア） -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10" Grid.Row="0">
            <TextBlock Name="ScoreText" Foreground="White" FontSize="30" Text="SCORE: 0"/>
        </StackPanel>

        <!-- ゲーム描画領域 -->
        <Canvas Name="GameCanvas" Width="512" Height="512"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Focusable="True" Grid.Row="1"/>

        <!-- 下部 HUD（ライフ：左下、ラウンド：右下） -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ライフ -->
            <TextBlock Name="LivesText" Foreground="White" FontSize="30"
                       Text="LIVES: 3"
                       HorizontalAlignment="Left" VerticalAlignment="Bottom"/>

            <!-- ラウンド -->
            <TextBlock Name="RoundText" Foreground="White" FontSize="30"
                       Text="ROUND 1"
                       Grid.Column="1"
                       HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        </Grid>

        <!-- Game Over 表示 -->
        <TextBlock x:Name="GameOverText"
           Grid.Row="0" Grid.RowSpan="3"
           Text="GAME OVER"
           Foreground="Red"
           FontSize="48"
           FontWeight="Bold"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"
           Visibility="Collapsed"
           Panel.ZIndex="100"/>
    </Grid>
</Window>
